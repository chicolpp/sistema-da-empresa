<div class="row fields">
  <div class="col-lg-4">
    <div class="input-group">
      <span class="input-group-addon" id="addon-nome">Nome</span>
      <%= f.text_field :nome, class: "form-control #{f.object.errors[:nome].first ? 'input-error' : ''}" %>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="input-group">
      <span class="input-group-addon" id="addon-descricao">Descrição</span>
      <%= f.text_field :descricao, class: "form-control #{f.object.errors[:descricao].first ? 'input-error' : ''}" %>
    </div>
  </div>
  <div class="col-lg-2">
    <%= link_to_remove_fields "<span class='glyphicon glyphicon-remove btn-sm btn-danger'></span>".html_safe, f %>
  </div>
  <div class="col-lg-12">
    <div class="input-group">
      <span class="input-group-addon" id="addon-observacoes">Observações</span>
      <%= f.text_area :observacoes, class: "form-control #{f.object.errors[:observacoes].first ? 'input-error' : ''}", "aria-describedby" => "addon-observacoes", rows: 2 %>
    </div>
  </div>
</div>