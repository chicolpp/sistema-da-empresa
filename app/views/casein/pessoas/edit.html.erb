<h2>
	Editar <%= @pessoa.nome %>
	<%= link_to "#{casein_show_icon "th-list"}Listar Clientes".html_safe, casein_clientes_path, class: "pull-right" if can? :index, @pessoa.cliente %>
	<%= link_to "#{casein_show_icon "zoom-in"}Visualizar".html_safe, casein_pessoa_path(@pessoa), class: "pull-right" if can? :show, @pessoa.cliente %>
</h2>

<%= form_for @pessoa, :url => casein_pessoa_path(@pessoa) do |f| %>

	<div class="tab-content">
		<%= render :partial => 'casein/pessoas/form', :locals => { :f => f } %>
	</div>

	<p class="submits">
		<%= f.submit "Salvar", :class => "btn btn-mini btn-success" %>
	</p>
<% end %>