<!-- Scaffolding generated by Casein v5.1.0.0 -->

<div class="row">
	<div class="col-xs-12 col-md-4">
		<%= form_tag casein_pessoa_aniversariantes_path("filtrar"), :method => :get do %>
			<div class="input-group">
			  <span class="input-group-addon" id="addon-codigo">Mês</span>
				<%= select_tag :mes, options_for_select([["Janeiro", 1], ["Fevereiro", 2], ["Março", 3], ["Abril", 4], ["Maio", 5], ["Junho", 6], ["Julho", 7], ["Agosto", 8], ["Setembro", 9], ["Outubro", 10], ["Novembro", 11], ["Dezembro", 12]], params[:mes]), class: "form-control select_padrao" %>
				<span class="input-group-btn">
					<%= submit_tag("Filtrar", :class => "contato-btn btn btn-primary") %>
				</span>
			</div>
		<% end %>
	</div>
</div>

<div id="printableArea">
	<h2>Relatório de Aniversariantes</h2>

	<table class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th>Nome</th>
				<th>E-mail</th>
				<th>Data Nascimento</th>
				<th>Idade</th>
			</tr>
		</thead>

		<tbody>
			<% @pessoas.each do |pessoa| %>
				<tr>
					<td><%= pessoa.nome %></td>
					<td><%= pessoa.email_contato %></td>
					<td><%= l(pessoa.data_nascimento) %></td>
					<td><%= get_idade(pessoa.data_nascimento) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>