<!-- Scaffolding generated by Casein v5.1.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Código", :id %></th>
			<th><%= casein_sort_link "Nome", :nome %></th>
			<th><%= casein_sort_link "CPF/CNPJ", :tipo %></th>
			<th><%= casein_sort_link "E-mail", :email_contato %></th>
			<th><%= casein_sort_link "E-mail NFE", :email_xml %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% pessoas.each do |pessoa| %>
		<tr>
			<td><%= casein_table_cell_link pessoa.id, casein_pessoa_path(pessoa) %></td>
			<td><%= casein_table_cell_link pessoa.nome, casein_pessoa_path(pessoa) %></td>
			<td><%= casein_table_cell_link pessoa.tipo ? pessoa.pessoa_juridica ? pessoa.pessoa_juridica.cnpj : "-" : pessoa.pessoa_fisica ? pessoa.pessoa_fisica.cpf : "-", casein_pessoa_path(pessoa) %></td>
			<td><%= casein_table_cell_link pessoa.email_contato, casein_pessoa_path(pessoa) %></td>
			<td><%= casein_table_cell_link pessoa.email_xml, casein_pessoa_path(pessoa) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_pessoa_path(pessoa), :method => :delete, :data => { :confirm => "Você tem certeza que deseja apagar este registro?" }) %>
			</td>
		</tr>
	<% end %>
</table>
