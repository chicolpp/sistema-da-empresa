<div class="row">
  <div class="col-xs-12 col-sm-4">
    <h2 style="border: none;"><%= @casein_page_title %></h2>
  </div>
  <div class="col-xs-12 col-sm-4">
    <strong>Filtro: </strong>
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%- if params[:filter].blank? -%>
          Em aberto
        <%- elsif params[:filter] == 'all' -%>
          Todos
        <%- else -%>
          Concluídos
        <%- end -%>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li class="<%= 'active' if params[:filter]  == 'all'%>"> <%= link_to 'Todos', casein_ordem_servicos_path(filter: 'all')  %> </li>
        <li class="<%= 'active' if params[:filter].blank?%>"> <%= link_to 'Em aberto', casein_ordem_servicos_path %></li>
        <li class="<%= 'active' if params[:filter]  == 'done'%>"> <%= link_to 'Concluídos', casein_ordem_servicos_path(filter: 'done') %></li>
      </ul>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4">
	 <%= link_to "#{casein_show_icon "plus-sign"}Nova Ordem de Serviço".html_safe, new_casein_ordem_servico_path, class: "pull-right" %>
  </div>
</div>
<hr/>

<%= render :partial => 'casein/ordem_servicos/table', :locals => { :ordem_servicos => @ordem_servicos } %>


<div style='margin-top: 50px'>

  <h2>
    Em Andamento
    <%= link_to "#{casein_show_icon "plus-sign"}Nova Manutenção".html_safe, new_casein_manutencao_path, class: "pull-right" if can? :new, Manutencao %>
  </h2>

  <%= render :partial => 'casein/manutencaos/table_orders', :locals => { :manutencaos => @manutencaos } %>
</div>