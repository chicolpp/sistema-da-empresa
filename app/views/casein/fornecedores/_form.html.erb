<div class="row">
	<div class="col-lg-12">
		<div class="input-group">
			<span class="input-group-addon" id="addon-observacoes">Observações</span>
			<%= f.text_area :observacoes, class: "form-control", "aria-describedby" => "addon-observacoes", rows: 2 %>
