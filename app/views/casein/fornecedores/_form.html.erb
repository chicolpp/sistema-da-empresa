<div class="row">
	<div class="col-lg-6">
		<div class="input-group">
			<span class="input-group-addon" id="addon-nome-contato">Nome</span>
			<%= f.text_field :nome_contato, class: "form-control", placeholder: "Pessoa de Contato", "aria-describedby" => "addon-nome-contato" %>
		</div>
	</div>
	<div class="col-lg-6">
		<div class="input-group">
