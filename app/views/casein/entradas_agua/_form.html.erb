<script type="text/javascript">
	$(".vazao_aproximada").on('keyup', function() {
		var total = 0;
		var valor = 0;
		$(".vazao_aproximada").not(':hidden').each(function() {
			valor = this.value;
			valor = valor.replace('.', '');
			valor = valor.replace(',', '.');
			if (Number.parseFloat(valor) > 0) {
				total += Number.parseFloat(valor);
			}
		});
		$(".vazao_total").text(total);
		total = 0;
	});
</script>