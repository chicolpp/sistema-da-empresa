<!-- Scaffolding generated by Casein v5.1.1.1 -->

<div class="row">
	<div class="col-lg-4">
		<div class="input-group">
		  <span class="input-group-addon" id="addon-data-perfuracao-inicio">Data Perfuração - Início *</span>
			<% f.object.data_perfuracao_inicio = f.object.data_perfuracao_inicio.strftime('%d/%m/%Y') unless f.object.data_perfuracao_inicio.blank? %>
			<%= f.text_field :data_perfuracao_inicio, class: "form-control #{f.object.errors[:data_perfuracao_inicio].first ? 'input-error' : ''}", "aria-describedby" => "addon-data-perfuracao-inicio", data: {masker: true, type: :d} %>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="input-group">
		  <span class="input-group-addon" id="addon-data-perfuracao-fim">Data Perfuração - Fim *</span>
		  <% f.object.data_perfuracao_fim = f.object.data_perfuracao_fim.strftime('%d/%m/%Y') unless f.object.data_perfuracao_fim.blank? %>
			<%= f.text_field :data_perfuracao_fim, class: "form-control #{f.object.errors[:data_perfuracao_fim].first ? 'input-error' : ''}", "aria-describedby" => "addon-data-perfuracao-fim", data: {masker: true, type: :d} %>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="input-group">
		  <span class="input-group-addon" id="addon-profundidade">Profundidade *</span>
			<%= f.text_field :profundidade, class: "form-control #{f.object.errors[:profundidade].first ? 'input-error' : ''} masc-decimal", "aria-describedby" => "addon-profundidade" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4">
		<div class="input-group">
		  <span class="input-group-addon" id="addon-maquina-id">Máquina *</span>
			<%= f.collection_select :maquina_id, Maquina.select("id, descricao").order(:descricao).all, :id, :descricao, {include_blank: true}, {class: "form-control #{f.object.errors[:maquina_id].first ? 'input-error' : ''} select_maquina", "aria-describedby" => "addon-maquina-id"} %>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="input-group">
		  <span class="input-group-addon" id="addon-bitola-id">Bitola Final (mm) *</span>
			<%= f.collection_select :bitola_id, Bitola.select("id, descricao").order(:descricao).all, :id, :descricao, {include_blank: true}, {class: "form-control #{f.object.errors[:bitola_id].first ? 'input-error' : ''} select_bitola", "aria-describedby" => "addon-bitola-id"} %>
		</div>
	</div>
</div>
<br>
<div id="dados_perfuracao_funcionarios">
	<div class="row">
		<div class="col-lg-12">
			<h2>
				Equipe de Perfuração
				<%= link_to_add_fields "#{casein_show_icon "plus-sign"}Incluir Funcionário".html_safe, f, :perfuracao_funcionarios, "pull-right", "Adicionar um Novo Funcionário", "perfuracao_funcionarios" %>
			</h2>
		</div>
	</div>
	<div id="perfuracao_funcionarios">
		<%= f.fields_for :perfuracao_funcionarios do |perfuracao_funcionario|%>
		  <%= render "casein/perfuracao_funcionarios/form", f: perfuracao_funcionario %>
		<% end %>
	</div>
</div>