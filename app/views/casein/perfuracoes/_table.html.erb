<!-- Scaffolding generated by Casein v5.1.1.1 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Codigo do Poço", :poco_id %></th>
			<th><%= casein_sort_link "Cliente", :poco_id %></th>
			<th><%= casein_sort_link "Data da Perfuração", :data_perfuracao %></th>
			<th><%= casein_sort_link "Profundidade", :profundidade %></th>
			<th><%= casein_sort_link "Máquina", :maquina_id %></th>
			<th><%= casein_sort_link "Bitola Final", :bitola_id %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% perfuracoes.each do |perfuracao| %>
		<tr>
			<td><%= casein_table_cell_link perfuracao.poco_id, casein_perfuracao_path(perfuracao) %></td>
			<td><%= casein_table_cell_link perfuracao.poco.try(:cliente).pessoa.nome, casein_perfuracao_path(perfuracao) %></td>
			<td><%= casein_table_cell_link l(perfuracao.data_perfuracao), casein_perfuracao_path(perfuracao) %></td>
			<td><%= casein_table_cell_link perfuracao.profundidade, casein_perfuracao_path(perfuracao) %></td>
			<td><%= casein_table_cell_link perfuracao.maquina.descricao, casein_perfuracao_path(perfuracao) %></td>
			<td><%= casein_table_cell_link perfuracao.bitola.descricao, casein_perfuracao_path(perfuracao) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_perfuracao_path(perfuracao), :method => :delete, :data => { :confirm => "Você tem certeza que deseja apagar este registro?" }) %>
			</td>
		</tr>
	<% end %>
</table>
