<!-- Scaffolding generated by Casein v5.1.1.1 -->

<table class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
	<thead>
		<tr>
			<th>Poço</th>
			<th>Serviço</th>
			<th>Observação</th>
			<th>Data Novo Contato</th>
			<th data-orderable="false">&nbsp;</th>
		</tr>
	</thead>

	<tbody>
		<% manutencao_contatos.each do |manutencao_contato| %>
			<tr>
				<td><%= casein_table_cell_link manutencao_contato.poco_id, casein_manutencao_contato_path(manutencao_contato) %></td>
				<td><%= casein_table_cell_link manutencao_contato.manutencao_servico, casein_manutencao_contato_path(manutencao_contato) %></td>
				<td><%= casein_table_cell_link manutencao_contato.observacao.truncate(100), casein_manutencao_contato_path(manutencao_contato) %></td>
				<td><%= casein_table_cell_link l(manutencao_contato.nova_data), casein_manutencao_contato_path(manutencao_contato) %></td>
				<td>
					<%= link_to(casein_show_row_icon("zoom-in"), casein_manutencao_contato_path(manutencao_contato), class: "icon-table") %>
					<%= link_to(casein_show_row_icon("edit"), edit_casein_manutencao_contato_path(manutencao_contato), class: "icon-table") %>
					<%= link_to(casein_show_row_icon("trash"), casein_manutencao_contato_path(manutencao_contato), class: "icon-table", :method => :delete, :data => { :confirm => "Você tem certeza que deseja apagar este registro?" }) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>