<!-- Scaffolding generated by Casein v5.1.1.1 -->

<table class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
	<thead>
		<tr>
			<th>Descrição</th>
			<th>Unidade de Medida</th>
			<th data-orderable="false">&nbsp;</th>
		</tr>
	</thead>

	<tbody>
		<% produtos.each do |produto| %>
			<tr>
				<td><%= casein_table_cell_link produto.descricao, casein_produto_path(produto) %></td>
				<td><%= casein_table_cell_link produto.unidade_medida.try(:descricao), casein_produto_path(produto) %></td>
				<td>
					<%= link_to(casein_show_row_icon("zoom-in"), casein_produto_path(produto), class: "icon-table") %>
					<%= link_to(casein_show_row_icon("edit"), edit_casein_produto_path(produto), class: "icon-table") %>
					<%= link_to(casein_show_row_icon("trash"), casein_produto_path(produto), class: "icon-table", :method => :delete, :data => { :confirm => "Você tem certeza que deseja apagar este registro?" }) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>