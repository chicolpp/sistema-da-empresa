<!-- Scaffolding generated by Casein v5.1.1.1 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Quantidade", :quantidade %></th>
			<th>Unidade de Medida</th>
			<th><%= casein_sort_link "Materiais", :produto_id %></th>
			<th><%= casein_sort_link "Observação", :observacao %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% manutencao_produtos.each_with_index do |manutencao_produto, i| %>
		<tr id="manutencao_produto_<%= manutencao_produto.id %>">
			<td><%= casein_table_cell_link manutencao_produto.quantidade, casein_manutencao_produto_path(manutencao_produto) %></td>
			<td><%= casein_table_cell_link manutencao_produto.produto.unidade_medida.descricao, casein_manutencao_produto_path(manutencao_produto) %></td>
			<td><%= casein_table_cell_link manutencao_produto.produto.try(:descricao), casein_manutencao_produto_path(manutencao_produto) %></td>
			<td><%= casein_table_cell_link manutencao_produto.observacao, casein_manutencao_produto_path(manutencao_produto) %></td>
			<td>
				<%= link_to "Remover", casein_manutencao_produto_path(manutencao_produto), method: :delete, remote: true, class: "btn btn-danger btn-sm", data: {confirm: "Você tem certeza que deseja apagar este registro?"} %>
			</td>
		</tr>
	<% end %>
</table>

