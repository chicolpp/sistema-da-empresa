<!-- Scaffolding generated by Casein v5.1.1.1 -->

<div class="row fields">
	<div class="col-xs-12">
		<div class="col-xs-12 nested-dashed">
			<div class="row">
				<div class="col-xs-12 col-md-7">
					<div class="row">
						<div class="col-lg-6">
							<div class="input-group">
							  	<span class="input-group-addon" id="addon-tipo">Tipo *</span>
								<%= f.select :tipo, [["Início", 0], ["Conserto/Revisão", 1], ["Finalização", 2]], {}, {class: "form-control #{f.object.errors[:tipo].first ? 'input-error' : ''} select_padrao", "aria-describedby" => "addon-tipo"} %>
							</div>
						</div>
						<div class="col-lg-5">
							<div class="input-group">
							  	<span class="input-group-addon" id="addon-data">Data *</span>
							  	<% f.object.data_servico = f.object.data_servico.strftime('%d/%m/%Y') unless f.object.data_servico.blank? %>
								<%= f.text_field :data_servico, class: "form-control #{f.object.errors[:data_servico].first ? 'input-error' : ''}", "aria-describedby" => "addon-data", data: {masker: true, type: :d} %>
							</div>
						</div>
						<div class="col-lg-1" align="right">
							<%= link_to_remove_fields "<span class='glyphicon glyphicon-remove btn-sm btn-danger'></span>".html_safe, f %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="input-group">
							  	<span class="input-group-addon" id="addon-descricao">Descrição</span>
								<%= f.text_area :descricao, class: "form-control #{f.object.errors[:descricao].first ? 'input-error' : ''}", "aria-describedby" => "addon-descricao", rows: 4 %>
							</div>
						</div>
					</div>
					<div class="row">
						<div id="dados_arquivos">
							<div class="col-lg-12">
								<h2>
									Produtos Utilizados
									<%= link_to_add_fields "#{casein_show_icon "plus-sign"}Incluir Produto".html_safe, f, :manutencao_servico_itens, "pull-right", "Adicionar um Novo Produto", "manutencao_servico_itens_#{f.index}" %>
								</h2>
							</div>
							<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
								<div id="manutencao_servico_itens_<%= f.index %>">
									<%= f.fields_for :manutencao_servico_itens do |manutencao_servico_item| %>
									  <%= render "casein/manutencao_servico_itens/form", f: manutencao_servico_item %>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-xs-5">
					<div class="row">
						<div id="dados_arquivos">
							<div class="col-lg-12">
								<h2>
									Equipe
									<%= link_to_add_fields "#{casein_show_icon "plus-sign"}Incluir Funcionário".html_safe, f, :manutencao_funcionarios, "pull-right", "Adicionar um Novo Funcionário", "manutencao_funcionarios_#{f.index}" %>
								</h2>
							</div>
							<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
								<div id="manutencao_funcionarios_<%= f.index %>">
									<%= f.fields_for :manutencao_funcionarios do |manutencao_funcionario| %>
									  <%= render "casein/manutencao_funcionarios/form", f: manutencao_funcionario %>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>