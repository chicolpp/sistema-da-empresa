<!-- Scaffolding generated by Casein v5.1.0.0 -->

<div class="row fields">
	<div class="col-lg-3">
		<div class="input-group">
			<span class="input-group-addon" id="addon-nome-contato">Nome</span>
			<%= f.text_field :nome_contato, class: "form-control", placeholder: "Nome", "aria-describedby" => "addon-nome-contato" %>
		</div>
	</div>
	<div class="col-lg-3">
		<div class="input-group">
			<span class="input-group-addon" id="addon-email-contato">E-mail</span>
			<%= f.text_field :email_contato, class: "form-control", placeholder: "E-mail", "aria-describedby" => "addon-email-contato" %>
		</div>
	</div>
	<div class="col-lg-2">
		<div class="input-group">
			<span class="input-group-addon" id="addon-data-nascimento-contato">Nasc</span>
			<% f.object.data_nascimento_contato = f.object.data_nascimento_contato.strftime('%d/%m/%Y') unless f.object.data_nascimento_contato.blank? %>
			<%= f.text_field :data_nascimento_contato, class: "form-control", data: {masker: true, type: :d}, "aria-describedby" => "addon-data-nascimento-contato" %>
		</div>
	</div>
	<div class="col-lg-3">
		<div class="input-group">
			<span class="input-group-addon" id="addon-telefone-contato">Telefone</span>
			<%= f.text_field :telefone_contato, class: "form-control masc-telefone", "aria-describedby" => "addon-telefone-contato" %>
		</div>
	</div>
	<div class="col-lg-1">
		<%= link_to_remove_fields "<span class='glyphicon glyphicon-remove btn-sm btn-danger'></span>".html_safe, f %>
	</div>
</div>
