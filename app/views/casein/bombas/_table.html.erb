<!-- Scaffolding generated by Casein v5.1.1.1 -->

<table class="table table-striped table-bordered datatable" cellspacing="0" width="100%">
	<thead>
		<tr>
			<th>Descrição</th>
			<th>Modelo da Bomba</th>
			<th>Estágio</th>
			<th>Motor/HP</th>
			<th>Energia</th>
			<th data-orderable="false">&nbsp;</th>
		</tr>
	</thead>

	<tbody>
		<% bombas.each do |bomba| %>
			<tr>
				<td><%= casein_table_cell_link bomba.observacao, casein_bomba_path(bomba) %></td>
				<td><%= casein_table_cell_link bomba.modelo_bomba.try(:descricao), casein_bomba_path(bomba) %></td>
				<td><%= casein_table_cell_link bomba.estagio.try(:descricao), casein_bomba_path(bomba) %></td>
				<td><%= casein_table_cell_link bomba.motor.try(:descricao), casein_bomba_path(bomba) %></td>
				<td><%= casein_table_cell_link bomba.energia.try(:descricao), casein_bomba_path(bomba) %></td>
				<td>
					<%= link_to(casein_show_row_icon("zoom-in"), casein_bomba_path(bomba), class: "icon-table") %>
					<%= link_to(casein_show_row_icon("edit"), edit_casein_bomba_path(bomba), class: "icon-table") %>
					<%= link_to(casein_show_row_icon("trash"), casein_bomba_path(bomba), class: "icon-table", :method => :delete, :data => { :confirm => "Você tem certeza que deseja apagar este registro?" }) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>