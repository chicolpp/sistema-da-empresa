	</div>
	<div class="col-lg-4">
		<div class="input-group">
			<span class="input-group-addon" id="addon-data-fim">Data de Fim</span>
			<% f.object.data_final = f.object.data_final.strftime('%d/%m/%Y') unless f.object.data_final.blank? %>
			<%= f.text_field :data_final, class: "form-control", "aria-describedby" => "addon-data-fim", :required => true, data: {masker: true, type: :d} %>
		</div>
	</div>
