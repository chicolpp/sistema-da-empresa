<!-- Scaffolding generated by Casein v5.1.1.1 -->

<% if @funcionario.errors.any? %>
	<ul>
	  <% @funcionario.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	</ul>
<% end %>

<% if controller_name == "funcionarios" %>
	<div class="row">
		<div class="col-lg-6">
			<div class="input-group">
				<span class="input-group-addon" id="addon-nome">Nome</span>
				<%= f.fields_for :pessoa do |pessoa|%>
					<%= pessoa.text_field :nome, class: "form-control", placeholder: "Nome Completo", "aria-describedby" => "addon-nome", required: true %>
				<% end %>
			</div>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-lg-4">
		<div class="input-group">
			<span class="input-group-addon" id="addon-funcionario-cargo">Cargo Atual</span>
			<%= f.select :cargo_id, Cargo.all.collect { |p| [ p.descricao, p.id ] }, {prompt: "Selecione"}, {class: "form-control", "aria-describedby" => "addon-tipo-endereco"} %>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="input-group">
			<span class="input-group-addon" id="addon-carteira-profissional">Carteira Profissional</span>
			<%= f.text_field :carteira_profissional, class: "form-control", placeholder: "Carteira Profissional", "aria-describedby" => "addon-carteira-profissional" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4">
		<div class="input-group">
			<span class="input-group-addon" id="addon-demissao">Data de Demissão</span>
			<% f.object.data_demissao = f.object.data_demissao.strftime('%d/%m/%Y') unless f.object.data_demissao.blank? %>
			<%= f.text_field :data_demissao, class: "form-control", "aria-describedby" => "addon-data-demissao", data: {masker: true, type: :d} %>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="input-group">
			<span class="input-group-addon" id="addon-admissao">Data de Admissão</span>
			<% f.object.data_admissao = f.object.data_admissao.strftime('%d/%m/%Y') unless f.object.data_admissao.blank? %>
			<%= f.text_field :data_admissao, class: "form-control", "aria-describedby" => "addon-data-admissao", data: {masker: true, type: :d} %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-8">
		<div class="input-group">
			<span class="input-group-addon" id="addon-curriculo">Currículo</span>
			<%= f.text_area :curriculo, class: "form-control", placeholder: "Currículo", "aria-describedby" => "addon-curriculo", rows: 4 %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4">
		<div class="input-group">
			<span class="input-group-addon" id="addon-use-app">Usuará o aplicativo?</span>
			<%= f.select :use_app, [["Sim", true], ["Não", false]],{},{class: "checkbox_app form-control #{f.object.errors[:use_app].first ? 'input-error' : ''}","aria-describedby" => "addon_use_app"} %>
		</div>
	</div>
	<div class="info-login">
		<div class="col-lg-4">
			<div class="input-group">
				<span class="input-group-addon" id="addon-email">E-mail</span>
				<%= f.text_field :email, class: "form-control", placeholder: "E-mail", "aria-describedby" => "addon-email" %>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="input-group">
				<span class="input-group-addon" id="addon-senha">Senha</span>
				<%= text_field_tag :senha, params[:senha], class: "form-control" %>
			</div>
		</div>
	</div>
</div>


<script charset="utf-8">
	jQuery(document).ready(function($) {
		$('.colorpicker').minicolors({
			theme: 'bootstrap'
		});
	});

	$("#funcionario_use_app").on('change', function(){
		if ($(this).val() == "true"){
			$(".info-login").show();
		} else {
			$(".info-login").hide();
		}
	});
</script>
