<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Cidade/UF", :cidade_id %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% usuario_cidades.each do |usuario_cidade| %>
		<tr>
			<td><%= usuario_cidade.cidade.nome %> - <%= usuario_cidade.cidade.estado.nome %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_usuario_cidade_path(usuario_cidade), :method => :delete, :remote => true, :data => { :confirm => "Realmente deseja remover essa cidade?" }) %>
			</td>
		</tr>
	<% end %>
</table>